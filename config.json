{
  "source": ["properties/**/*.json"],
  "platforms": {
    "android": {
      "transforms": [
        "attribute/cti",
        "name/cti/snake",
        "color/hex8android",
        "size/sp",
        "size/dp"
      ],
      "buildPath": "cetus/src/main/res/values/",
      "files": [{
        "destination": "font_dimens.xml",
        "format": "android/fontDimens"
      },{
        "destination": "colors.xml",
        "format": "android/colors"
      }]
    },
    "ios": {
      "transforms": [
        "attribute/cti",
        "custom/name/ti/camel",
        "color/hex8",
        "custom/size/number",
        "content/objC/literal",
        "asset/objC/literal",
        "font/objC/literal"
      ],
      "buildPath": "build/ios/",
      "files": [{
        "destination": "CetusColors.json",
        "format": "json/flat",
        "type": "CetusColorName",
        "filter": {
          "attributes": {
            "category": "color"
          }
        }
      },
      {
        "destination": "CetusDimensions.json",
        "format": "json/flat",
        "className": "CetusDimensions",
        "type": "float",
        "filter": {
          "attributes": {
            "category": "size"
          }
        }
      }]
    }
  }
}
